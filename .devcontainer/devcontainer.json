{
  "name": "Python 3.11 with OCR",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {
      "installBuildTools": "true",
      "upgradePackages": "true"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    }
  },
  // --- ADDED TESSERACT INSTALLATION ---
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y --no-install-recommends libgl1-mesa-glx poppler-utils tesseract-ocr tesseract-ocr-eng && sudo apt-get clean && rm -rf /var/lib/apt/lists/*",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "main.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "postAttachCommand": {
    "server": "pip install --no-cache-dir -r requirements.txt && streamlit run main.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}